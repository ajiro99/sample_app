<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new post..." %>
  </div>
  
  <div class="col-md-5">
    <div class="actions">
      <%= f.submit "Post", class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>